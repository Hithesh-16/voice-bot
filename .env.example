# Twilio (Telephony)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Deepgram — used for STT and TTS (no OpenAI quota needed for voice)
DEEPGRAM_API_KEY=
# DEEPGRAM_TTS_MODEL=aura-asteria-en

# Text-to-Speech fallbacks (only if Deepgram fails or not set)
# ELEVENLABS_API_KEY=
# OPENAI (uses quota): OPENAI_API_KEY

# AI Brain — use one of:
# - OpenAI (paid): OPENAI_API_KEY=sk-...
# - Groq (free tier): GROQ_API_KEY=gsk_... or GROK_API_KEY=gsk_...
# - Ollama (local): LLM_PROVIDER=ollama (run: ollama run llama3.2)
OPENAI_API_KEY=
# GROQ_API_KEY=gsk_...
# GROK_API_KEY=gsk_...
# GROQ_CHAT_MODEL=llama-3.3-70b-versatile
# LLM_PROVIDER=ollama
# OLLAMA_BASE_URL=http://localhost:11434/v1
# OLLAMA_CHAT_MODEL=llama3.2

# Optional: CRM / external APIs (for tools)
# HUBSPOT_API_KEY=
# CALENDAR_API_KEY=

# Bot vertical: sales | support | banking | healthcare
BOT_VERTICAL=sales
